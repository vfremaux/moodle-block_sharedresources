{{!
    @template block-sharedresources/block_content

    Block template for sharedresources tool

    The purpose of this template is render a navigation block in course contexts. This template renders all the visible sections in a course.

    Classes required for JS:
    * none

    Context variables required for this template:
    * sections Array of course sections containing arrays of modules
    * modules Array of course modules
}}

<ul>
{{#converttourl}}
<div class="menu-item">
<span class="fa fa-sign-in-alt icon" aria-hidden="true"></span> <a href="{{{converttourl}}}" >{{{converttostr}}}</a>
</div>
{{/converttourl}}

{{#convertbackurl}}
<div class="menu-item">
<span class="fa fa-sign-out-alt icon" aria-hidden="true"></span> <a href="{{{convertbackurl}}}">{{{convertbackstr}}}</a>
</div>
{{/convertbackurl}}

{{#importurl}}
<div class="menu-item">
<span class="fa fa-download icon" aria-hidden="true"></span> <a href="{{{importurl}}}">{{{importstr}}}</a>
</div>
{{/importurl}}

{{#libraryurl}}
<div class="menu-item">
<span class="fa fa-warehouse icon" aria-hidden="true"></span> <a href="{{{libraryurl}}}">{{{librarystr}}}</a>
</div>
{{/libraryurl}}

</ul>