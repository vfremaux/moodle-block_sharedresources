{{!
    @template block_sharedresources/block_content

    Block template for displaying the sharedresources tool list

    Classes required for JS:
    * none

}}
<!-- block_sharedresources/block_content -->
<ul>
{{#converttourl}}
<div class="menu-item">
<span class="fa fas fa-sign-in-alt icon" aria-hidden="true"></span> <a href="{{{converttourl}}}" >{{#str}}convertto, block_sharedresources{{/str}}</a>
</div>
{{/converttourl}}

{{#convertbackurl}}
<div class="menu-item">
<span class="fa fas fa-sign-out-alt icon" aria-hidden="true"></span> <a href="{{{convertbackurl}}}">{{#str}}convertback, block_sharedresources{{/str}}</a>
</div>
{{/convertbackurl}}

{{#importurl}}
<div class="menu-item">
<span class="fa fas fa-download icon" aria-hidden="true"></span> <a href="{{{importurl}}}">{{#str}}importfromfiles, block_sharedresources{{/str}}</a>
</div>
{{/importurl}}

{{#libraryurl}}
<div class="menu-item">
<span class="fa fas fa-warehouse icon" aria-hidden="true"></span> <a href="{{{libraryurl}}}">{{#str}}viewlibrary, block_sharedresources{{/str}}</a>
</div>
{{/libraryurl}}

</ul>
<!-- /block_sharedresources/block_content -->